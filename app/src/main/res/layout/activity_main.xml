<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="8:45 PM"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.27" />

    <Button
        android:id="@+id/btn_setTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Set Timer"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_time"
        app:layout_constraintStart_toStartOf="@+id/tv_time"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <Button
        android:id="@+id/btn_setAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Set Alarm"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_setTimer"
        app:layout_constraintStart_toStartOf="@+id/btn_setTimer"
        app:layout_constraintTop_toBottomOf="@+id/btn_setTimer" />

    <Button
        android:id="@+id/btn_cancelAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cancel Alarm"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_setAlarm"
        app:layout_constraintStart_toStartOf="@+id/btn_setAlarm"
        app:layout_constraintTop_toBottomOf="@+id/btn_setAlarm" />

    <Button
        android:id="@+id/btn_advanceNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Advance Notification"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_cancelAlarm"
        app:layout_constraintStart_toStartOf="@+id/btn_cancelAlarm"
        app:layout_constraintTop_toBottomOf="@+id/btn_cancelAlarm" />
</androidx.constraintlayout.widget.ConstraintLayout>